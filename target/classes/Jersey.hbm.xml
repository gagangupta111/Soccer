<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.soccer.entity.Jersey" table = "JERSEY">

        <meta attribute = "class-description">
            This class contains the Sale detail.
        </meta>

        <id name = "id" type = "int" column = "JERSEY_ID">
            <generator class="native"/>
        </id>

        <property name = "name" column = "JERSEY_NAME" type = "string"/>
        <property name = "color" column = "JERSEY_COLOR" type = "string"/>
        <property name = "size" column = "JERSEY_SIZE" type = "string"/>

    </class>

</hibernate-mapping>