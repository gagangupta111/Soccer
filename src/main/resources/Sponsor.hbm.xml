<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.soccer.entity.Sponsor" table = "SPONSOR">

        <meta attribute = "class-description">
            This class contains the Sale detail.
        </meta>

        <id name = "id" type = "int" column = "SPONSOR_ID">
            <generator class="native"/>
        </id>

        <property name = "name" column = "SPONSOR_NAME" type = "string"/>
        <property name = "reputation" column = "SPONSOR_REPUTATION" type = "string"/>
        <property name = "max_spent" column = "SPONSOR_MAX_SPENT" type = "long"/>

    </class>

</hibernate-mapping>